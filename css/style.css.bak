   ================================================================ */
.principal-desk {
    padding: 80px 0;
    background: linear-gradient(135deg, #eef4fb 0%, #f5f0eb 100%);
}

.principal-desk-grid {
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: 50px;
    align-items: flex-start;
    margin-top: 40px;
}

.principal-photo {
    text-align: center;
}

/* Rectangular 4:3 principal photo */
.principal-photo img {
    width: 260px;
    height: 195px;
    border-radius: 14px;
    object-fit: cover;
    border: 5px solid #ffffff;
    box-shadow: 0 10px 32px rgba(30,74,107,0.18);
    margin-bottom: 18px;
}

.principal-name-card {
    background: #ffffff;
    border-radius: 14px;
    padding: 18px 16px;
    box-shadow: 0 4px 18px rgba(30,74,107,0.10);
    border: 1px solid #e2e8f0;
}

.principal-name-card h4 {
    font-size: 1.05rem !important;
    font-weight: 800 !important;
    color: #1e293b !important;
    margin-bottom: 5px !important;
}

.principal-name-card p {
    font-size: 0.87rem !important;
    color: #475569 !important;
    margin: 0 !important;
    font-weight: 500 !important;
}

.principal-quals {
    font-size: 0.78rem !important;
    color: #64748b !important;
    margin-top: 5px !important;
}

.principal-message {
    background: #ffffff;
    border-radius: 18px;
    padding: 38px 42px;
    box-shadow: 0 6px 32px rgba(30,74,107,0.09);
    border: 1px solid #e2e8f0;
    position: relative;
}

.quote-icon {
    font-size: 2.4rem;
    color: #1e4a6b;
    opacity: 0.2;
    margin-bottom: 16px;
}

.principal-message p {
    color: #374151 !important;
    line-height: 1.85 !important;
    margin-bottom: 18px !important;
    font-size: 0.97rem !important;
    font-weight: 400 !important;
}

.principal-signature {
    margin-top: 28px;
    padding-top: 20px;
    border-top: 2px solid #e2f0f9;
    display: flex;
    flex-direction: column;
    gap: 3px;
}

.signature-name {
    font-weight: 800 !important;
    color: #1e293b !important;
    font-size: 1.08rem !important;
}

.signature-title {
    color: #1e4a6b !important;
    font-size: 0.9rem !important;
    font-weight: 600 !important;
}

/* ================================================================
   ABOUT US PAGE — All text visibility fixes
   ================================================================ */

/* 25+ years heading & body text */
.about-content h2,
.about-content .about-content h2 {
    color: #1e293b !important;
    font-weight: 800 !important;
}

.about-content p {
    color: #374151 !important;
    font-weight: 400 !important;
    line-height: 1.8 !important;
}

/* About feature items (proven track record etc.) */
.about-feature h4 {
    color: #1e293b !important;
    font-weight: 700 !important;
    font-size: 1rem !important;
    margin-bottom: 4px !important;
}

.about-feature p {
    color: #4b5563 !important;
    font-size: 0.9rem !important;
    margin: 0 !important;
}

/* Trust badges on about preview */
.trust-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin: 24px 0;
}

.trust-badge {
    display: flex;
    align-items: center;
    gap: 10px;
    background: #ffffff;
    border: 1px solid #d1e4f0;
    border-radius: 10px;
    padding: 12px 18px;
    box-shadow: 0 2px 10px rgba(30,74,107,0.08);
}

.trust-badge i {
    color: #1e4a6b;
    font-size: 1.2rem;
}

.trust-badge span {
    color: #1e293b !important;
    font-weight: 600 !important;
    font-size: 0.9rem !important;
}

/* Our Mission / Our Vision cards */
.mission-card,
.vision-card,
[class*="mission"],
[class*="vision"] {
    background: #ffffff !important;
}

.mission-card h3,
.vision-card h3,
[class*="mission"] h3,
[class*="vision"] h3 {
    color: #1e293b !important;
    font-weight: 800 !important;
}

.mission-card p,
.vision-card p,
[class*="mission"] p,
[class*="vision"] p {
    color: #374151 !important;
    line-height: 1.8 !important;
}

/* Founder / Chairman / Principal / Academic Director names */
.team-card h3,
.founder-card h3,
.leadership-name,
[class*="team"] h3,
[class*="founder"] h3,
[class*="chairman"] h3,
[class*="academic-dir"] h3 {
    color: #1e293b !important;
    font-weight: 800 !important;
    font-size: 1.15rem !important;
}

.team-card p,
.founder-card p,
[class*="team"] p,
[class*="founder"] p {
    color: #475569 !important;
}

/* Generic about page section backgrounds */
.about-section,
.about-page,
[class*="about-"] {
    background-color: #ffffff !important;
}

/* ================================================================
   PROGRAMS PAGE — Arts / Science / Commerce card text
   ================================================================ */

/* Program card background forced to white */
.program-card {
    background: #ffffff !important;
}

/* Program card headings (Arts Stream, Science Stream, Commerce Stream) */
.program-card h3 {
    color: #1e293b !important;
    font-weight: 800 !important;
    font-size: 1.5rem !important;
}

/* Program description text */
.program-card .program-desc,
.program-card > p {
    color: #4b5563 !important;
    font-size: 0.97rem !important;
    line-height: 1.7 !important;
    font-weight: 400 !important;
}

/* Feature list items inside cards */
.program-features p {
    color: #374151 !important;
    font-size: 0.92rem !important;
    font-weight: 500 !important;
}

.program-features i {
    color: #2c7a4d !important;
}

/* ================================================================
   RESULTS PAGE — Student names & field names
   ================================================================ */

/* Result card / table backgrounds */
.result-card,
.results-table,
.result-item,
[class*="result-"] {
    background: #ffffff !important;
}

/* Student names */
.result-card h3,
.result-card h4,
.result-name,
[class*="result-"] h3,
[class*="result-"] h4,
[class*="student-name"],
.achievement-card h3 {
    color: #1e293b !important;
    font-weight: 700 !important;
}

/* Field / subject name labels */
.result-card p,
.result-field,
.result-subject,
[class*="result-"] p,
.stream-label {
    color: #475569 !important;
    font-weight: 500 !important;
}

/* Percentage / score display */
.percentage {
    color: #c25e2e !important;
    font-weight: 800 !important;
}

/* Rank text */
.rank {
    color: #1e4a6b !important;
    font-weight: 700 !important;
}

.success-line {
    color: #4b5563 !important;
    font-style: italic !important;
}

/* Achievement section background */
.achievement-section {
    background: #f5f2ed !important;
}

.achievement-card {
    background: #ffffff !important;
}

/* ================================================================
   FACULTY PAGE — Professor names & qualifications
   ================================================================ */

.faculty {
    background: #f5f2ed !important;
}

.faculty-card {
    background: #ffffff !important;
    border: 1px solid #e2e8f0 !important;
}

/* Faculty name */
.faculty-info h3 {
    color: #1e293b !important;
    font-weight: 800 !important;
    font-size: 1.1rem !important;
    margin-bottom: 6px !important;
}

/* Subject / department */
.faculty-subject {
    color: #c25e2e !important;
    font-weight: 700 !important;
    font-size: 0.92rem !important;
    margin-bottom: 6px !important;
}

/* Qualification text */
.faculty-qualification {
    color: #4b5563 !important;
    font-size: 0.85rem !important;
    font-weight: 500 !important;
    line-height: 1.5 !important;
}

.faculty-experience {
    background: #e2f0f9 !important;
    color: #1e4a6b !important;
    font-weight: 600 !important;
}

/* ================================================================
   CONTACT PAGE — All text elements
   ================================================================ */

.contact-section,
.contact-page,
[class*="contact-section"] {
    background: #f5f2ed !important;
}

/* Contact info block headings */
.contact-info-block h3,
.contact-details h3,
.contact-box h3,
[class*="contact"] h3 {
    color: #1e293b !important;
    font-weight: 800 !important;
}

/* Contact info text (address, phone, email) */
.contact-info-block p,
.contact-details p,
.contact-box p,
[class*="contact"] p {
    color: #374151 !important;
    font-weight: 400 !important;
    line-height: 1.75 !important;
}

/* Contact icon labels */
.contact-item,
.contact-detail-item {
    color: #1e293b !important;
}

.contact-item span,
.contact-detail-item span {
    color: #374151 !important;
    font-weight: 500 !important;
}

.contact-item i,
.contact-detail-item i {
    color: #1e4a6b !important;
}

/* Contact form labels */
.contact-form label,
form label {
    color: #1e293b !important;
    font-weight: 600 !important;
    font-size: 0.93rem !important;
}

/* Form input styling for legibility */
.contact-form input,
.contact-form textarea,
.contact-form select,
form input,
form textarea,
form select {
    color: #1e293b !important;
    background: #ffffff !important;
    border: 1.5px solid #d1d5db !important;
    border-radius: 10px !important;
}

.contact-form input::placeholder,
form input::placeholder,
.contact-form textarea::placeholder,
form textarea::placeholder {
    color: #9ca3af !important;
}

/* Contact card background */
.contact-card,
.contact-grid > div,
[class*="contact-card"] {
    background: #ffffff !important;
    border: 1px solid #e2e8f0 !important;
    border-radius: 16px;
    padding: 28px;
    box-shadow: 0 4px 16px rgba(30,74,107,0.08) !important;
}

/* Map heading / address info */
.contact-map-section h3,
.map-title {
    color: #1e293b !important;
    font-weight: 700 !important;
}

/* ================================================================
   SECTION TITLE OVERRIDES — all pages
   ================================================================ */
.section-title h2 {
    color: #1e293b !important;
    font-weight: 800 !important;
}

.section-title p {
    color: #4b5563 !important;
}

.section-subtitle {
    color: #c25e2e !important;
    font-weight: 700 !important;
}

/* ================================================================
   PROGRAM CARD (individual stream pages) — full page overrides
   ================================================================ */
.program-detail-card,
.stream-card,
.stream-detail,
[class*="stream-"] h2,
[class*="stream-"] h3,
[class*="program-detail"] h2,
[class*="program-detail"] h3 {
    color: #1e293b !important;
}

[class*="stream-"] p,
[class*="program-detail"] p {
    color: #374151 !important;
}

/* ================================================================
   RESPONSIVE: keep leadership grid single column on mobile
   ================================================================ */
@media (max-width: 768px) {
    .leadership-grid {
        grid-template-columns: 1fr;
    }

    .principal-desk-grid {
        grid-template-columns: 1fr;
        gap: 28px;
    }

    .principal-photo img {
        width: 220px;
        height: 165px;
        margin: 0 auto 16px;
    }

    .principal-message {
        padding: 24px 20px;
    }
}

